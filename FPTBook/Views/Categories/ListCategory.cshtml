@model IEnumerable<FPTBook.Models.Category>

@{
	ViewData["Title"] = "Request New Category";
}
<div class="" style="display:flex; flex-direction-row; gap:60px; margin: 0 0 0 0">
	<partial name="_DashboardPartial" />
	<div class="" style="">
		<h1>Index</h1>

		<p>
			<a asp-action="RequestNewCategory">Request New Category</a>
		</p>
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Description)
					</th>
					<th>
						@Html.DisplayNameFor(model=>model.IsRequest)
					</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td>
							@Html.DisplayFor(modelItem=>item.IsRequest)
						</td>
						<td>
							<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

